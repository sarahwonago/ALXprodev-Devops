#!/bin/bash

# Ensure the data.json file exists
if [ ! -f data.json ]; then
  echo "data.json not found. Please run the API automation script first."
  exit 1
fi

# Extract fields using jq
NAME=$(jq -r '.name' data.json | sed 's/.*/\u&/')  # Capitalize first letter
HEIGHT=$(jq '.height' data.json | awk '{ printf "%.1f", $1 / 10 }')  # dm to meters
WEIGHT=$(jq '.weight' data.json | awk '{ printf "%.0f", $1 / 10 }')  # hg to kg
TYPE=$(jq -r '.types[0].type.name' data.json | sed 's/.*/\u&/')  # First type, capitalize

# Output in human-readable format
echo "$NAME is of type $TYPE, weighs ${WEIGHT}kg, and is ${HEIGHT}m tall."
